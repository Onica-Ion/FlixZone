@model List<FlixZone.Web.Models.AnimeData>

      <!-- Hero Section Begin -->
      <section class="hero">
           <div class="container">
               <div class="hero__slider owl-carousel">
                   @if (Model == null || !Model.Any())
                   {
                       <p>No anime available. Please check back later.</p>
                   }
                   else
                   {
                       int displayedCount = 0;
                       foreach (var anime in Model)
                       {
                           <div class="hero__items set-bg" data-setbg="@anime.Anime_Poster">
                               <div class="row">
                                   <div class="col-lg-6">
                                       <div class="hero__text">
                                           <div class="label">@anime.Anime_Genre</div>
                                           <h2>@anime.Anime_Name</h2>
                                           <p>@anime.Anime_Description</p>
                                           <a href="@Url.Action("Index","Anime_Watching", new {id = anime.Anime_Id})"><span>Watch Now</span> <i class="fa fa-angle-right"></i></a>
                                       </div>
                                   </div>
                               </div>
                           </div>

                           if (displayedCount >= 3)
                           {
                               // Dacă s-au afișat deja 6 comentarii, ieșiți din buclă
                               break;
                           }
                       }
                   }
               </div>
           </div>
      </section>
