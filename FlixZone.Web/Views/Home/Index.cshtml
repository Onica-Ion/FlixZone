@model FlixZone.Web.Models.CombinedModel

<!-- Hero Section Begin -->
<section class="hero">
     <div class="container">
          <div class="hero__slider owl-carousel">
               @{
                    foreach (var list in Model.AnimeList.list)
                    {
                        <div class="hero__items set-bg" data-setbg="@list.ImageUrl">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="hero__text">
                                        <div class="label">@list.Genre</div>
                                        <h2>@list.Name</h2>
                                        <p>@list.Description</p>
                                        <a href="#"><span>Watch Now</span> <i class="fa fa-angle-right"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
               }
          </div>
     </div>
</section>
<!-- Hero Section End -->
<!-- Product Section Begin -->
<section class="product spad">
     <div class="container">
          <div class="row">
               <div class="col-lg-8">
                    <div class="trending__product">
                         <div class="row">
                              <div class="col-lg-8 col-md-8 col-sm-8">
                                   <div class="section-title">
                                        <h4>Trending Now</h4>
                                   </div>
                              </div>
                              <div class="col-lg-4 col-md-4 col-sm-4">
                                   <div class="btn__all">
                                        <a href="#" class="primary-btn">View All <span class="arrow_right"></span></a>
                                   </div>
                              </div>
                         </div>
                         <div class="row">
                             @{ 
                                 foreach(var list in Model.TrendingList.list)
                                    {
                                        <div class="col-lg-4 col-md-6 col-sm-6">
                                             <div class="product__item">
                                                  <div class="product__item__pic set-bg" data-setbg="@list.ImageUrl">
                                                       <div class="ep">@list.Ep</div>
                                                       <div class="comment"><i class="fa fa-comments"></i> @list.Comment_counter</div>
                                                       <div class="view"><i class="fa fa-eye"></i> @list.View_counter</div>
                                                  </div>
                                                  <div class="product__item__text">
                                                       <ul>
                                                            <li>Active</li>
                                                            <li>Movie</li>
                                                       </ul>
                                                       <h5><a href="#">@list.Name</a></h5>
                                                  </div>
                                             </div>
                                        </div>
                                    }
                             }
                         </div>
                    </div>
                    <div class="popular__product">
                        <div class="row">
                            <div class="col-lg-8 col-md-8 col-sm-8">
                                <div class="section-title">
                                    <h4>Popular Shows</h4>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <div class="btn__all">
                                    <a href="#" class="primary-btn">View All <span class="arrow_right"></span></a>
                                </div>
                            </div>
                        </div>
                         <div class="row">
                                @{
                                    foreach (var list in Model.PopularList.list)
                                    {
                                        <div class="col-lg-4 col-md-6 col-sm-6">
                                            <div class="product__item">
                                                <div class="product__item__pic set-bg" data-setbg="@list.ImageUrl">
                                                    <div class="ep">@list.Ep</div>
                                                    <div class="comment"><i class="fa fa-comments"></i> @list.Comment_counter</div>
                                                    <div class="view"><i class="fa fa-eye"></i> @list.View_counter</div>
                                                </div>
                                                <div class="product__item__text">
                                                    <ul>
                                                        <li>Active</li>
                                                        <li>Movie</li>
                                                    </ul>
                                                    <h5><a href="#">@list.Name</a></h5>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                         </div>
                    </div>
                    <div class="recent__product">
                         <div class="row">
                              <div class="col-lg-8 col-md-8 col-sm-8">
                                   <div class="section-title">
                                        <h4>Recently Added Shows</h4>
                                   </div>
                              </div>
                              <div class="col-lg-4 col-md-4 col-sm-4">
                                   <div class="btn__all">
                                        <a href="#" class="primary-btn">View All <span class="arrow_right"></span></a>
                                   </div>
                              </div>
                         </div>
                         <div class="row">
                             @{
                                 foreach (var list in Model.RecentList.list)
                                 {
                                     <div class="col-lg-4 col-md-6 col-sm-6">
                                         <div class="product__item">
                                             <div class="product__item__pic set-bg" data-setbg="@list.ImageUrl">
                                                 <div class="ep">@list.Ep</div>
                                                 <div class="comment"><i class="fa fa-comments"></i> @list.Comment_counter</div>
                                                 <div class="view"><i class="fa fa-eye"></i> @list.View_counter</div>
                                             </div>
                                             <div class="product__item__text">
                                                 <ul>
                                                     <li>Active</li>
                                                     <li>Movie</li>
                                                 </ul>
                                                 <h5><a href="#">@list.Name</a></h5>
                                             </div>
                                         </div>
                                     </div>
                                 }
                             }
                         </div>
                    </div>
                    <div class="live__product">
                         <div class="row">
                              <div class="col-lg-8 col-md-8 col-sm-8">
                                   <div class="section-title">
                                        <h4>Live Action</h4>
                                   </div>
                              </div>
                              <div class="col-lg-4 col-md-4 col-sm-4">
                                   <div class="btn__all">
                                        <a href="#" class="primary-btn">View All <span class="arrow_right"></span></a>
                                   </div>
                              </div>
                         </div>
                         <div class="row">
                             @{
                                 foreach (var list in Model.LiveList.list)
                                 {
                                     <div class="col-lg-4 col-md-6 col-sm-6">
                                         <div class="product__item">
                                             <div class="product__item__pic set-bg" data-setbg="@list.ImageUrl">
                                                 <div class="ep">@list.Ep</div>
                                                 <div class="comment"><i class="fa fa-comments"></i> @list.Comment_counter</div>
                                                 <div class="view"><i class="fa fa-eye"></i> @list.View_counter</div>
                                             </div>
                                             <div class="product__item__text">
                                                 <ul>
                                                     <li>Active</li>
                                                     <li>Movie</li>
                                                 </ul>
                                                 <h5><a href="#">@list.Name</a></h5>
                                             </div>
                                         </div>
                                     </div>
                                 }
                             }
                         </div>
                    </div>
               </div>
               <div class="col-lg-4 col-md-6 col-sm-8">
                    <div class="product__sidebar">
                         <div class="product__sidebar__view">
                              <div class="section-title">
                                   <h5>Top Views</h5>
                              </div>
                              <ul class="filter__controls">
                                   <li class="active" data-filter="*">Day</li>
                                   <li data-filter=".week">Week</li>
                                   <li data-filter=".month">Month</li>
                                   <li data-filter=".years">Years</li>
                              </ul>
                              <div class="filter__gallery">
                                  @foreach (var list in Model.TopViewList.list)
                                  {
                                      <div class="@list.Class_Col"
                                           data-setbg="@list.ImageUrl">
                                          <div class="ep">@list.Ep</div>
                                          <div class="view"><i class="fa fa-eye"></i> @list.View_counter</div>
                                          <h5><a href="#">@list.Name</a></h5>
                                      </div>
                                  }
                              </div>
                         </div>
                             <div class="product__sidebar__comment">
                                 <div class="section-title">
                                     <h5>New Comment</h5>
                                 </div>
                                 @foreach (var list in Model.NewCommentList.list)
                                 {
                                     <div class="product__sidebar__comment__item">
                                         <div class="product__sidebar__comment__item__pic">
                                             <img src="@list.ImageUrl" alt="">
                                         </div>
                                         <div class="product__sidebar__comment__item__text">
                                             <ul>
                                                 <li>Active</li>
                                                 <li>Movie</li>
                                             </ul>
                                             <h5><a href="#">@list.Name</a></h5>
                                             <span><i class="fa fa-eye"></i>@list.View_counter Viewes</span>
                                         </div>
                                     </div>
                                 }
                             </div>
                         </div>
                    </div>
               </div>
          </div>
     </div>
</section>
<!-- Product Section End -->
